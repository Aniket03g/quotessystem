<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Generic Proxy System</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #f5f5f5;
      color: #333;
      line-height: 1.6;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    .login-container {
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 400px;
    }

    h1 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
      color: #222;
    }

    p {
      color: #666;
      margin-bottom: 1.5rem;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    label {
      display: block;
      margin-bottom: 0.25rem;
      color: #444;
      font-weight: 500;
    }

    input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
    }

    input:focus {
      outline: none;
      border-color: #333;
    }

    .btn {
      width: 100%;
      padding: 0.75rem;
      background: #333;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.2s;
    }

    .btn:hover {
      background: #555;
    }

    .btn:disabled {
      background: #999;
      cursor: not-allowed;
    }

    .error {
      background: #fee;
      color: #c33;
      padding: 0.75rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      display: none;
    }

    .error.show {
      display: block;
    }

    .demo-users {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid #eee;
    }

    .demo-users h3 {
      font-size: 0.875rem;
      color: #666;
      margin-bottom: 0.5rem;
    }

    .demo-users ul {
      list-style: none;
      font-size: 0.875rem;
      color: #888;
    }

    .demo-users li {
      margin-bottom: 0.25rem;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 1rem;
      color: #666;
      text-decoration: none;
    }

    .back-link:hover {
      color: #333;
    }

    .oauth-section {
      margin: 1.5rem 0;
    }

    .oauth-btn {
      width: 100%;
      padding: 0.75rem;
      background: white;
      color: #333;
      border: 2px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      font-weight: 500;
    }

    .oauth-btn:hover {
      border-color: #333;
      background: #f9f9f9;
    }

    .oauth-btn svg {
      width: 20px;
      height: 20px;
    }

    .divider {
      text-align: center;
      margin: 1.5rem 0;
      position: relative;
    }

    .divider::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      width: 100%;
      height: 1px;
      background: #e0e0e0;
    }

    .divider span {
      background: white;
      padding: 0 1rem;
      position: relative;
      color: #999;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h1>Login</h1>
    <p>Enter your credentials to access the system</p>

    <div id="error" class="error"></div>

    <!-- Google OAuth Button -->
    <div class="oauth-section">
      <button type="button" class="oauth-btn" id="googleLoginBtn">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Continue with Google
      </button>
    </div>

    <div class="divider">
      <span>OR</span>
    </div>

    <form id="loginForm">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required autocomplete="email">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required autocomplete="current-password">
      </div>

      <button type="submit" class="btn" id="submitBtn">Login</button>
    </form>

    <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #eee;">
      <p style="color: #666; font-size: 0.9rem;">
        Don't have an account? <a href="/signup" style="color: #333; font-weight: 600; text-decoration: none;">Sign up</a>
      </p>
    </div>
  </div>

  <script>
    import { loginUser } from '../lib/api';
    import { decodeJWT } from '../utils/jwt';

    const API_BASE_URL = `http://${window.location.hostname}:8080`;
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const errorDiv = document.getElementById('error') as HTMLDivElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const googleLoginBtn = document.getElementById('googleLoginBtn') as HTMLButtonElement;

    // Google OAuth login
    googleLoginBtn?.addEventListener('click', () => {
      // Redirect to backend OAuth endpoint with provider parameter
      window.location.href = `${API_BASE_URL}/auth/google?provider=google`;
    });

    // Regular email/password login
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = (document.getElementById('email') as HTMLInputElement).value;
      const password = (document.getElementById('password') as HTMLInputElement).value;

      // Clear previous errors
      errorDiv.classList.remove('show');
      errorDiv.textContent = '';
      submitBtn.disabled = true;
      submitBtn.textContent = 'Logging in...';

      try {
        const response = await loginUser(email, password);
        // Store email for user profile display
        localStorage.setItem('user_email', email);
        
        // Decode JWT to check for must_change_password
        const claims = decodeJWT(response.token);
        
        if (claims?.must_change_password) {
          // User must change password before accessing system
          window.location.href = '/change-password';
        } else {
          // Normal login - redirect to quotes page
          window.location.href = '/quotes';
        }
      } catch (error) {
        errorDiv.textContent = error instanceof Error ? error.message : 'Login failed';
        errorDiv.classList.add('show');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Login';
      }
    });
  </script>
</body>
</html>
