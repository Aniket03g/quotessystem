---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Accounts - Grove Systems" currentPage="accounts">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-semibold text-slate-800">Accounts</h1>
        <p class="text-sm text-slate-600 mt-1">Manage and search customer accounts</p>
      </div>
      <button id="createAccountBtn" class="inline-flex items-center gap-2 px-4 py-2.5 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Create Account
      </button>
    </div>
  </div>

  <!-- Selected Account Card -->
  <div id="selectedAccountCard" class="hidden mb-6">
    <div class="bg-gradient-to-r from-emerald-50 to-teal-50 border border-emerald-200 rounded-2xl overflow-hidden shadow-sm">
      <div class="flex items-center justify-between px-6 py-4 border-b border-emerald-200 bg-white/50">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <h3 class="text-sm font-semibold text-slate-800">Selected Account</h3>
        </div>
        <button id="clearSelectionBtn" class="text-sm text-slate-600 hover:text-slate-900 font-medium transition-colors">
          Clear Selection
        </button>
      </div>
      <div id="selectedAccountDetails" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-6"></div>
    </div>
  </div>

  <!-- Search and Table Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200">
    <!-- Search Section -->
    <div class="p-6 border-b border-slate-200">
      <div class="relative">
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Search accounts by name..." 
          class="w-full pl-10 pr-10 py-2.5 bg-slate-50 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          autocomplete="off"
        />
        <div id="searchSpinner" class="absolute right-3 top-1/2 -translate-y-1/2 hidden">
          <svg class="animate-spin w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
      <div id="searchStatus" class="mt-2 text-xs text-slate-500 min-h-[1rem]"></div>
    </div>

    <!-- Loading State -->
    <div id="loading" class="hidden py-12 text-center">
      <svg class="animate-spin w-8 h-8 text-blue-600 mx-auto mb-3" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-sm text-slate-600">Loading accounts...</p>
    </div>

    <!-- Error State -->
    <div id="error" class="hidden mx-6 my-4 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-sm text-red-800" id="errorText"></p>
      </div>
    </div>

    <!-- Table -->
    <div id="accountsTable" class="hidden overflow-x-auto">
      <table class="w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Account Name</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Owner</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Phone</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Industry</th>
          </tr>
        </thead>
        <tbody id="accountsBody" class="divide-y divide-slate-200"></tbody>
      </table>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="hidden py-12 text-center">
      <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
      </svg>
      <p class="text-slate-600 font-medium mb-1">No accounts found</p>
      <p class="text-sm text-slate-500">Try adjusting your search or clear the filter</p>
    </div>
  </div>

  <script>
    import { getToken, safeJsonParse } from '../lib/api';
    import { debounce } from '../utils/debounce';

    const API_BASE_URL = 'http://localhost:8080';
    const token = getToken();

    if (!token) {
      window.location.href = '/login';
    }

    const loadingDiv = document.getElementById('loading') as HTMLDivElement;
    const errorDiv = document.getElementById('error') as HTMLDivElement;
    const accountsTable = document.getElementById('accountsTable') as HTMLDivElement;
    const accountsBody = document.getElementById('accountsBody') as HTMLTableSectionElement;
    const emptyState = document.getElementById('emptyState') as HTMLDivElement;
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const searchSpinner = document.getElementById('searchSpinner') as HTMLDivElement;
    const searchStatus = document.getElementById('searchStatus') as HTMLDivElement;
    const selectedAccountCard = document.getElementById('selectedAccountCard') as HTMLDivElement;
    const selectedAccountDetails = document.getElementById('selectedAccountDetails') as HTMLDivElement;
    const clearSelectionBtn = document.getElementById('clearSelectionBtn') as HTMLButtonElement;

    let selectedAccount: any = null;

    /**
     * Build NocoDB search query with proper URL encoding
     * Query format: where=(Account Name,like,%searchTerm%)
     */
    function buildSearchQuery(searchTerm: string): string {
      if (!searchTerm.trim()) {
        return '';
      }

      const rawWhere = `(Account Name,like,%${searchTerm}%)`;
      const encodedWhere = encodeURIComponent(rawWhere);
      const queryString = `where=${encodedWhere}&pageSize=15`;

      return queryString;
    }

    /**
     * Search accounts via Generic Go Proxy
     */
    async function searchAccounts(searchTerm: string) {
      try {
        searchSpinner.classList.remove('hidden');
        searchStatus.textContent = 'Searching...';
        searchStatus.classList.add('text-blue-600');
        errorDiv.classList.add('hidden');
        loadingDiv.classList.add('hidden');

        const queryString = buildSearchQuery(searchTerm);
        const url = queryString 
          ? `${API_BASE_URL}/proxy/accounts/records?${queryString}`
          : `${API_BASE_URL}/proxy/accounts/records?pageSize=15`;

        console.log('[ACCOUNT LOOKUP] URL:', url);

        const response = await fetch(url, {
          method: 'GET',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json',
          },
        });

        if (response.status === 401) {
          logout();
          return;
        }

        const data = await safeJsonParse(response);
        console.log('[ACCOUNT LOOKUP] Response:', data);

        displayResults(data.records || [], searchTerm);
      } catch (error) {
        console.error('[ACCOUNT LOOKUP ERROR]', error);
        searchSpinner.classList.add('hidden');
        searchStatus.textContent = '';
        searchStatus.classList.remove('text-blue-600');
        const errorText = errorDiv.querySelector('#errorText');
        if (errorText) {
          errorText.textContent = error instanceof Error ? error.message : 'Search failed';
        }
        errorDiv.classList.remove('hidden');
      }
    }

    /**
     * Display search results in the table
     */
    function displayResults(records: any[], searchTerm: string) {
      searchSpinner.classList.add('hidden');
      searchStatus.classList.remove('text-blue-600');

      if (searchTerm) {
        searchStatus.textContent = `Found ${records.length} account(s) matching "${searchTerm}"`;
      } else {
        searchStatus.textContent = `Showing ${records.length} account(s)`;
      }

      if (records.length === 0) {
        accountsTable.classList.add('hidden');
        emptyState.classList.remove('hidden');
        return;
      }

      emptyState.classList.add('hidden');

      accountsBody.innerHTML = records.map((record, index) => {
        const fields = record.fields || {};
        const accountName = fields['Account Name'] || '<span class="text-slate-400 italic">N/A</span>';
        const accountOwner = fields['Account Owner'] || '<span class="text-slate-400 italic">N/A</span>';
        const phone = fields['Phone'] || '<span class="text-slate-400 italic">N/A</span>';
        const industry = fields['Industry'] || '<span class="text-slate-400 italic">N/A</span>';
        const isSelected = selectedAccount && selectedAccount.id === record.id;

        return `
          <tr data-account-id="${record.id}" class="cursor-pointer transition-colors hover:bg-slate-50 ${isSelected ? 'bg-blue-50 hover:bg-blue-100' : index % 2 === 0 ? 'bg-white' : 'bg-slate-50/50'}">
            <td class="px-6 py-4 text-sm font-medium text-slate-900">${accountName}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${accountOwner}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${phone}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${industry}</td>
          </tr>
        `;
      }).join('');

      const rows = accountsBody.querySelectorAll('tr');
      rows.forEach((row, index) => {
        row.addEventListener('click', () => {
          selectAccount(records[index]);
        });
      });

      accountsTable.classList.remove('hidden');
    }

    /**
     * Select an account and display its details
     */
    function selectAccount(account: any) {
      selectedAccount = account;
      const fields = account.fields || {};

      selectedAccountDetails.innerHTML = `
        <div class="flex flex-col gap-1">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Name</span>
          <span class="text-sm text-slate-900">${fields['Account Name'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
        </div>
        <div class="flex flex-col gap-1">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Owner</span>
          <span class="text-sm text-slate-900">${fields['Account Owner'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
        </div>
        <div class="flex flex-col gap-1">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Phone</span>
          <span class="text-sm text-slate-900">${fields['Phone'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
        </div>
        <div class="flex flex-col gap-1">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Industry</span>
          <span class="text-sm text-slate-900">${fields['Industry'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
        </div>
        <div class="flex flex-col gap-1">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Type</span>
          <span class="text-sm text-slate-900">${fields['Account Type'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
        </div>
      `;

      selectedAccountCard.classList.remove('hidden');

      const rows = accountsBody.querySelectorAll('tr');
      rows.forEach(row => {
        if (row.getAttribute('data-account-id') === String(account.id)) {
          row.classList.add('selected');
        } else {
          row.classList.remove('selected');
        }
      });

      localStorage.setItem('selectedAccount', JSON.stringify(account));
      console.log('[ACCOUNT LOOKUP] Selected account:', account);
    }

    /**
     * Clear account selection
     */
    function clearSelection() {
      selectedAccount = null;
      selectedAccountCard.classList.add('hidden');
      localStorage.removeItem('selectedAccount');
      
      const rows = accountsBody.querySelectorAll('tr');
      rows.forEach(row => row.classList.remove('selected'));
    }

    // Debounced search function
    const debouncedSearch = debounce((searchTerm: string) => {
      searchAccounts(searchTerm);
    }, 400);

    // Handle search input changes
    searchInput.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value;
      
      if (searchTerm) {
        searchSpinner.classList.remove('hidden');
        searchStatus.textContent = 'Searching...';
        searchStatus.classList.add('text-blue-600');
      }

      debouncedSearch(searchTerm);
    });

    // Handle Enter key in search box
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const searchTerm = searchInput.value;
        searchAccounts(searchTerm);
      }
    });

    // Handle clear selection button
    clearSelectionBtn.addEventListener('click', clearSelection);

    // Check if there's a previously selected account
    const storedAccount = localStorage.getItem('selectedAccount');
    if (storedAccount) {
      try {
        selectedAccount = JSON.parse(storedAccount);
        const fields = selectedAccount.fields || {};
        selectedAccountDetails.innerHTML = `
          <div class="flex flex-col gap-1">
            <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Name</span>
            <span class="text-sm text-slate-900">${fields['Account Name'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Owner</span>
            <span class="text-sm text-slate-900">${fields['Account Owner'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Phone</span>
            <span class="text-sm text-slate-900">${fields['Phone'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Industry</span>
            <span class="text-sm text-slate-900">${fields['Industry'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Account Type</span>
            <span class="text-sm text-slate-900">${fields['Account Type'] || '<span class="text-slate-400 italic">N/A</span>'}</span>
          </div>
        `;
        selectedAccountCard.classList.remove('hidden');
      } catch (e) {
        console.error('Failed to parse stored account:', e);
      }
    }

    // Initial load: Show all accounts
    searchAccounts('');
  </script>
</DashboardLayout>
