---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Products - Grove Systems" currentPage="products">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-semibold text-slate-800">Products</h1>
        <p class="text-sm text-slate-600 mt-1">Manage product catalog</p>
      </div>
      <div class="flex gap-3">
        <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-white border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Import CSV
        </button>
        <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Product
        </button>
      </div>
    </div>
  </div>

  <!-- Search and Table Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200">
    <!-- Search Section -->
    <div class="p-6 border-b border-slate-200">
      <div class="relative">
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Search products by name..." 
          class="w-full pl-10 pr-10 py-2.5 bg-slate-50 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          autocomplete="off"
        />
        <div id="searchSpinner" class="absolute right-3 top-1/2 -translate-y-1/2 hidden">
          <svg class="animate-spin w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
      <div id="searchStatus" class="mt-2 text-xs text-slate-500 min-h-[1rem]"></div>
    </div>

    <!-- Loading State -->
    <div id="loading" class="hidden py-12 text-center">
      <svg class="animate-spin w-8 h-8 text-blue-600 mx-auto mb-3" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-sm text-slate-600">Loading products...</p>
    </div>

    <!-- Error State -->
    <div id="error" class="hidden mx-6 my-4 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-sm text-red-800" id="errorText"></p>
      </div>
    </div>

    <!-- Table -->
    <div id="productsTable" class="hidden overflow-x-auto">
      <table class="w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Product Name</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Brand</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">HSN Code</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Unit Price</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Tax</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody id="productsBody" class="divide-y divide-slate-200"></tbody>
      </table>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="hidden py-12 text-center">
      <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      <p class="text-slate-600 font-medium mb-1">No products found</p>
      <p class="text-sm text-slate-500">Try adjusting your search or clear the filter</p>
    </div>
  </div>

  <script>
    import { getToken, logout, safeJsonParse } from '../lib/api';
    import { debounce } from '../utils/debounce';

    const API_BASE_URL = `http://${window.location.hostname}:8080`;
    const token = getToken();

    if (!token) {
      window.location.href = '/login';
    }

    const loadingDiv = document.getElementById('loading') as HTMLDivElement;
    const errorDiv = document.getElementById('error') as HTMLDivElement;
    const productsTable = document.getElementById('productsTable') as HTMLDivElement;
    const productsBody = document.getElementById('productsBody') as HTMLTableSectionElement;
    const emptyState = document.getElementById('emptyState') as HTMLDivElement;
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const searchSpinner = document.getElementById('searchSpinner') as HTMLDivElement;
    const searchStatus = document.getElementById('searchStatus') as HTMLDivElement;

    let selectedProduct: any = null;

    /**
     * Build NocoDB search query with proper URL encoding
     * Query format: where=(Product Name,like,%searchTerm%)
     */
    function buildSearchQuery(searchTerm: string): string {
      if (!searchTerm.trim()) {
        return '';
      }

      const rawWhere = `(Product Name,like,%${searchTerm}%)~or(Product Code,like,%${searchTerm}%)`;
      const encodedWhere = encodeURIComponent(rawWhere);
      const queryString = `where=${encodedWhere}&pageSize=15`;

      return queryString;
    }

    /**
     * Search products via Generic Go Proxy
     */
    async function searchProducts(searchTerm: string) {
      try {
        searchSpinner.classList.remove('hidden');
        searchStatus.textContent = 'Searching...';
        searchStatus.classList.add('text-blue-600');
        errorDiv.classList.add('hidden');
        loadingDiv.classList.add('hidden');

        const queryString = buildSearchQuery(searchTerm);
        const url = queryString 
          ? `${API_BASE_URL}/proxy/products/records?${queryString}`
          : `${API_BASE_URL}/proxy/products/records?pageSize=15`;

        console.log('[PRODUCT LOOKUP] URL:', url);

        const response = await fetch(url, {
          method: 'GET',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json',
          },
        });

        if (response.status === 401) {
          logout();
          return;
        }

        const data = await safeJsonParse(response);
        console.log('[PRODUCT LOOKUP] Response:', data);

        displayResults(data.records || [], searchTerm);
      } catch (error) {
        console.error('[PRODUCT LOOKUP ERROR]', error);
        searchSpinner.classList.add('hidden');
        searchStatus.textContent = '';
        searchStatus.classList.remove('text-blue-600');
        const errorText = errorDiv.querySelector('#errorText');
        if (errorText) {
          errorText.textContent = error instanceof Error ? error.message : 'Search failed';
        }
        errorDiv.classList.remove('hidden');
      }
    }

    /**
     * Display search results in the table
     */
    function displayResults(records: any[], searchTerm: string) {
      searchSpinner.classList.add('hidden');
      searchStatus.classList.remove('text-blue-600');

      if (searchTerm) {
        searchStatus.textContent = `Found ${records.length} product(s) matching "${searchTerm}"`;
      } else {
        searchStatus.textContent = `Showing ${records.length} product(s)`;
      }

      if (records.length === 0) {
        productsTable.classList.add('hidden');
        emptyState.classList.remove('hidden');
        return;
      }

      emptyState.classList.add('hidden');

      productsBody.innerHTML = records.map((record, index) => {
        const fields = record.fields || {};
        const productName = fields['Product Name'] || '<span class="text-slate-400 italic">N/A</span>';
        const brand = fields['Brand'] || '<span class="text-slate-400 italic">N/A</span>';
        const hsnCode = fields['HSN Code'] || fields['Product Code'] || '<span class="text-slate-400 italic">N/A</span>';
        const unitPrice = fields['Unit Price'] ? parseFloat(String(fields['Unit Price'])) : 0;
        const tax = fields['Tax'] ? parseFloat(String(fields['Tax'])) : 0;
        const active = fields['Active'] !== false;
        const isSelected = selectedProduct && selectedProduct.id === record.id;

        return `
          <tr data-product-id="${record.id}" class="cursor-pointer transition-colors hover:bg-slate-50 ${isSelected ? 'bg-blue-50 hover:bg-blue-100' : index % 2 === 0 ? 'bg-white' : 'bg-slate-50/50'}">
            <td class="px-6 py-4 text-sm font-medium text-slate-900">${productName}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${brand}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${hsnCode}</td>
            <td class="px-6 py-4 text-sm text-slate-600">â‚¹${unitPrice.toFixed(2)}</td>
            <td class="px-6 py-4 text-sm text-slate-600">${tax}%</td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${active ? 'bg-emerald-100 text-emerald-800' : 'bg-red-100 text-red-800'}">
                ${active ? 'Active' : 'Inactive'}
              </span>
            </td>
          </tr>
        `;
      }).join('');

      const rows = productsBody.querySelectorAll('tr');
      rows.forEach((row, index) => {
        row.addEventListener('click', () => {
          selectProduct(records[index]);
        });
      });

      productsTable.classList.remove('hidden');
    }

    /**
     * Select a product and store in localStorage
     */
    function selectProduct(product: any) {
      selectedProduct = product;

      const rows = productsBody.querySelectorAll('tr');
      rows.forEach(row => {
        if (row.getAttribute('data-product-id') === String(product.id)) {
          row.classList.add('selected');
        } else {
          row.classList.remove('selected');
        }
      });

      localStorage.setItem('selectedProduct', JSON.stringify(product));
      console.log('[PRODUCT LOOKUP] Selected product:', product);
    }

    // Debounced search function
    const debouncedSearch = debounce((searchTerm: string) => {
      searchProducts(searchTerm);
    }, 400);

    // Handle search input changes
    searchInput.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value;
      
      if (searchTerm) {
        searchSpinner.classList.remove('hidden');
        searchStatus.textContent = 'Searching...';
        searchStatus.classList.add('text-blue-600');
      }

      debouncedSearch(searchTerm);
    });

    // Handle Enter key in search box
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const searchTerm = searchInput.value;
        searchProducts(searchTerm);
      }
    });

    // Check if there's a previously selected product
    const storedProduct = localStorage.getItem('selectedProduct');
    if (storedProduct) {
      try {
        selectedProduct = JSON.parse(storedProduct);
        console.log('[PRODUCT LOOKUP] Restored selected product:', selectedProduct);
      } catch (e) {
        console.error('Failed to parse stored product:', e);
      }
    }

    // Initial load: Show all products
    searchProducts('');
  </script>
</DashboardLayout>
